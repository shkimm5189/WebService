{{>layout/header}}

<h1> 게시판</h1>
<div class = "col-md-12">
    <div class ="row">
        <div class = "col-md-6">
            <a href = "/api/post" role="button" class = "btn btn-primary">글 등록</a>
        </div>
    </div>

<br>
<!-- 목록 출력 -->
<table class = "table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>게시글 번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>최종수정일</th>
    </tr>
    </thead>
    <tbody id ="tbody">
    <!-- mustache 문법 -->
    {{#post}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{author}}</td>
            <td>{{updateDate}}</td>
        </tr>
    {{/post}}
    </tbody>
</table>
</div>
{{>layout/footer}}
<script src="/js/app/post-save.js"></script>